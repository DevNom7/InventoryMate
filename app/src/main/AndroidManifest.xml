<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.cs360_project3_naimlindsay">

    <!-- Allow SMS sending (optional feature) -->
    <uses-permission android:name="android.permission.SEND_SMS" />

    <!-- Mark telephony hardware as optional so app runs on emulator -->
    <uses-feature android:name="android.hardware.telephony" android:required="false" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CS360Project2">

        <!-- SMS Activity (handles permissions and test message) -->
        <activity
            android:name=".ui.SmsActivity"
            android:exported="true"
            android:label="@string/title_sms" />

        <!-- Inventory Activity (CRUD with database) -->
        <activity
            android:name=".ui.InventoryActivity"
            android:exported="true"
            android:label="@string/title_inventory" />

        <!-- Login Activity (entry point / launcher) -->
        <activity
            android:name=".ui.LoginActivity"
            android:exported="true"
            android:label="@string/title_login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>
</manifest>
